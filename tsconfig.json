{
  "compilerOptions": {
    "target": "esnext", 
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": [
      "dom",          
      "dom.iterable", 
      "esnext"        
    ],
    "allowJs": false,  
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,  
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",  
    "moduleResolution": "node",  
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,  
    "jsx": "preserve"
  },
  "include": [
    "src"
  ]
}
